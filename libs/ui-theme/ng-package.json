{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/libs/ui-theme",
  "lib": {
    "entryFile": "src/index.ts",
    "styleIncludePaths": ["src/lib/themes"]
  },
  "assets": [
    {
      "glob": "*/.scss",
      "input": "src/lib/themes",
      "output": "themes"
    }
  ],
  "allowedNonPeerDependencies": ["@angular/cdk", "@angular/material"]
}
