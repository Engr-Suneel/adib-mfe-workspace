      "@adib-mfe-workspace/ui-theme": ["libs/ui-theme/src/index.ts"],
      "todoList/Routes": ["apps/todoList/src/app/remote-entry/entry.routes.ts"],
      "userProfile/Routes": [
        "apps/userProfile/src/app/remote-entry/entry.routes.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
